{
  "version": 2,

  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10",
        "maxLambdaSize": "15mb"
      }
    }
  ],

  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },

    { "src": "/static/(.*)", "dest": "/static/$1" },

    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/logo192.png", "dest": "/logo192.png" },
    { "src": "/logo512.png", "dest": "/logo512.png" },
    { "src": "/solar1.png", "dest": "/solar1.png" },
    { "src": "/solar2.png", "dest": "/solar2.png" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/robots.txt", "dest": "/robots.txt" },

    { "handle": "filesystem" },

    { "src": "/(.*)", "dest": "/index.html" }
  ],

  "headers": [
    {
      "source": "/(.*)", 
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self' ws:; object-src 'none'; media-src 'self';"
        }
      ]
    }
  ]
}